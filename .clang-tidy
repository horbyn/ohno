Checks: >
  bugprone-*,
  -bugprone-easily-swappable-parameters, # 忽略相邻两个形参类型相同的情况
  clang-analyzer-*,
  concurrency-*,
  misc-*
  modernize-*,
  performance-*,
  readability-*

WarningsAsErrors: '*'
CheckOptions:
  - key:   modernize-use-auto.MinTypeNameLength
    value: '10'
  - key:   readability-identifier-naming.ClassCase
    value: 'CamelCase'
  - key:   readability-identifier-naming.EnumCase
    value: 'CamelCase'
